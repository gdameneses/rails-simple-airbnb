<div class="main-content" style="background-color: white;">
  <div class="container">
    <div class="row">
      <h1>All properties (<%= @flats.count %>)</h1>
    </div>
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-4" style="width: 24rem;">
          <div class="card">
            <div class="card-img">
              <img class="card-img-top" src="<%= flat.img_url %>" alt="Flat image" style="height: 200px;">
            </div>
            <div class="card-body">
              <h4 class="card-title"><%= flat.name %></h4>
              <p class="card-text"><%= flat.address %></p>
              <div class="row">
                <h5 style="margin-right: 18px;"><i class="fas fa-users"></i><%= flat.number_of_guests %></h5>
                <h5><i class="fas fa-pound-sign"></i><%= flat.price_per_night %></h5>
              </div>
            </div>
            <div class="card-footer">
              <%= link_to 'More info', root_path%>
              <%= link_to 'Edit', root_path%>
              <%= link_to 'Remove', root_path%>
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
