<div class="main-content" style="background-color: white;">
  <div class="container">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="add-new-form">
          <h1>Add a new flat</h1>
          <%= simple_form_for @flat do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :price_per_night %>
          <%= f.input :number_of_guests %>
          <%= f.input :img_url %>
          <%= f.submit class: "btn btn-outline-success" %>
          <%= link_to 'Cancel', root_path, class: "btn btn-outline-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
